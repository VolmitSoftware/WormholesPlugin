<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cyberpwn</groupId>
	<artifactId>Wormholes</artifactId>
	<version>1.0</version>
	<name>Wormholes</name>
	<description>See what's on the other side.</description>
	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<ct.libs>${project.basedir}/lib</ct.libs>
		<production.folder>C:\Users\cyberpwn\Documents\development\release\vortexportals</production.folder>
		<development.folder>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins</development.folder>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.yml</include>
					<include>**/*.txt</include>
				</includes>
			</resource>
		</resources>
	</build>
	<profiles>
		<profile>
			<id>development</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<outputDirectory>${development.folder}</outputDirectory>
							<finalName>${project.name}</finalName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>production</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<outputDirectory>${production.folder}</outputDirectory>
							<finalName>${project.name}-${project.version}</finalName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<artifactId>spigot</artifactId>
			<groupId>spiot</groupId>
			<version>1.8.8</version>
			<systemPath>${ct.libs}/spigot-1.8.8.jar</systemPath>
			<scope>system</scope>
		</dependency>
		<dependency>
			<artifactId>protocollib</artifactId>
			<groupId>protocollib</groupId>
			<version>4.2.1</version>
			<systemPath>${ct.libs}/ProtocolLib-4.2.1.jar</systemPath>
			<scope>system</scope>
		</dependency>
	</dependencies>
</project>